// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/user.db"
}

model Address {
  addressid Int @id @default(autoincrement())
  street String
  number String
  city String
  state String
  zipcode String
  country String
  user User  @relation(fields: [userid], references: [id]) 
  userid Int @unique
  active Int
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  name String
  password String
  address Address[]
}
